---
// This page serves the demo app's index.html
// We read the pre-built HTML and inject it directly
import fs from 'node:fs';
import path from 'node:path';

const htmlPath = path.join(process.cwd(), 'public/demos/index.html');
let html = '';

if (fs.existsSync(htmlPath)) {
  html = fs.readFileSync(htmlPath, 'utf-8');
}
---
<Fragment set:html={html} />
