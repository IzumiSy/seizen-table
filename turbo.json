{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**", "dist-app/**"],
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build", "build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    }
  }
}
